<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stylefeng.guns.rest.common.persistence.dao.MoocOrderTMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.stylefeng.guns.rest.common.persistence.model.MoocOrderT">
        <result column="UUID" property="uuid" />
        <result column="cinema_id" property="cinemaId" />
        <result column="field_id" property="fieldId" />
        <result column="film_id" property="filmId" />
        <result column="seats_ids" property="seatsIds" />
        <result column="seats_name" property="seatsName" />
        <result column="film_price" property="filmPrice" />
        <result column="order_price" property="orderPrice" />
        <result column="order_time" property="orderTime" />
        <result column="order_user" property="orderUser" />
        <result column="order_status" property="orderStatus" />
    </resultMap>
    <select id="selectSeats_idsByField_id" resultType="java.lang.String">
        select seats_ids from mooc_order_t where field_id=#{filedId,jdbcType=INTEGER}
        and order_status !=2
    </select>
    <select id="selectOrderByOrderId" resultMap="BaseResultMap">
        select * from mooc_order_t where UUID=#{orderId,jdbcType=VARCHAR}
    </select>
    <update id="updateOrder_statusById">
        update mooc_order_t set  order_status = #{payResult,jdbcType=INTEGER} where UUID = #{orderId,jdbcType=VARCHAR}
    </update>


</mapper>
